pipeline {
    agent any

    tools {
        maven 'Maven_3.9.11'  // or your configured Maven version
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/2317024-code/Jenkins-Demo-By-Abijin.git'
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean install'  // use 'sh' if you're on Linux/Mac
            }
        }
    }
}
