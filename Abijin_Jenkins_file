pipeline {
    agent any

    tools {
        maven 'Maven_3.8.5'  // Name must match your Maven tool in Jenkins (set in Global Tool Configuration)
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/2317024-code/Jenkins-Demo-By-Abijin.git'
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean install'  // Use 'bat' instead of 'sh' if on Windows
            }
        }
    }
}
